<header>
  <nav class="navbar navbar-static-top redbar" role="navigation">
    <div class="container">
      <!-- <h1>Freelancer</h1> -->
      <a class='navbar-brand logo' href="/#">Fromer</a>
      <% if !current_user %>
        <%= button_to 'Sign In',
          new_user_session_path,
          method: :get,
          class: 'btn btn-default btn-sm navbar-btn my-btn pull-right' %>
        <%= button_to 'Sign Up', 
          new_user_registration_path, 
          method: :get,
          class: 'btn btn-default btn-sm navbar-btn my-btn pull-right'  %>
      <% else %>
        <%= button_to 'Sign Out', 
          destroy_user_session_path, 
          method: :delete,
          class: 'btn btn-default btn-sm navbar-btn my-btn pull-right'  %>
      <% end %>
    </div>
  </nav>
</header>